<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/camera_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/activeFilterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/active_filter_initial_text"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/camera_container"
        app:layout_constraintStart_toStartOf="@id/camera_container"
        app:layout_constraintEnd_toEndOf="@id/camera_container"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/camera_container"
        app:layout_constraintStart_toStartOf="@id/camera_container"
        app:layout_constraintEnd_toEndOf="@id/camera_container"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/dogVisionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_dog"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/dog_vision"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:id="@+id/catVisionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_cat"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/cat_vision"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:id="@+id/birdVisionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_bird"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/bird_vision"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:id="@+id/grayscaleVisionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_view"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Grayscale Vision"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:id="@+id/originalVisionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_eye"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/original_vision"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>